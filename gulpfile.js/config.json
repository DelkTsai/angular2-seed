{
	"browserSync": {
		"baseDir": "_dist",
		"open": false,
		"port": 1981
	},
	"src": {
		"assets": {
			"html": {
				"templates": ["./**/*.jade", "!./node_modules/**", "!./bower_components/**", "!dist"],
				"index": "./index.jade"
			},
			"stylus": {
				"app": ["!./app/css/**", "./app/public/*.styl", "./app/**/*.styl"],
				"main": "./app/css/styles.styl"
			}
		},
		"app": "./app/**/*",
		"ts": "./app/**/*.ts"
	},
	"dest": {
		"app": "./_dist/app",
		"assets": {
			"css": "./_dist/app/css",
			"dir": "./_dist/public",
			"html": {
				"index": "./_dist/",
				"templates": "./_dist/"
			},
			"stylus": {
				"app": "./_dist/",
				"main": "./_dist/css/"
			}
		},
		"dir": "./dist",
		"lib": "./_dist/lib"
	},
	"npm": "./node_modules/"
}
